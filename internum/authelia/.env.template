# JWT secret for token generation (minimum 20 characters recommended)
AUTHELIA_IDENTITY_VALIDATION_RESET_PASSWORD_JWT_SECRET=your_jwt_secret_here_minimum_20_chars

# Session secret for encrypting session data (minimum 20 characters recommended)
AUTHELIA_SESSION_SECRET=your_session_secret_here_minimum_20_chars

# Encryption key for database encryption (minimum 20 characters)
AUTHELIA_STORAGE_ENCRYPTION_KEY=your_encryption_key_here_minimum_20_chars